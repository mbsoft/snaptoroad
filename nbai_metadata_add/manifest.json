{
  "manifest_version": 3,
  "name": "NextBillion.ai Insert Metadata Extension",
  "version": "1.02",
  "description": "A Chrome extension to add required metadata for samsara, motive, geotab integrations",
  "permissions": ["activeTab", "scripting"], 
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}